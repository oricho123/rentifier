{
  "name": "rentifier-monorepo",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "pnpm -r build",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write '**/*.{ts,json,yaml,md}'",
    "format:check": "prettier --check '**/*.{ts,json,yaml,md}'",
    "typecheck": "pnpm -r exec tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "dev:collector": "pnpm --filter @rentifier/collector exec wrangler dev --test-scheduled --port 8787 --persist-to ../../.wrangler --inspector-port 9229",
    "dev:processor": "pnpm --filter @rentifier/processor exec wrangler dev --test-scheduled --port 8788 --persist-to ../../.wrangler --inspector-port 9230",
    "dev:notify": "pnpm --filter @rentifier/notify exec wrangler dev --test-scheduled --port 8789 --persist-to ../../.wrangler --inspector-port 9231",
    "dev": "concurrently -n collector,processor,notify -c blue,green,yellow \"pnpm dev:collector\" \"pnpm dev:processor\" \"pnpm dev:notify\"",
    "trigger:collector": "curl -s http://localhost:8787/__scheduled",
    "trigger:processor": "curl -s http://localhost:8788/__scheduled",
    "trigger:notify": "curl -s http://localhost:8789/__scheduled",
    "trigger:all": "pnpm trigger:collector && pnpm trigger:processor && pnpm trigger:notify",
    "db:migrate:local": "wrangler d1 migrations apply rentifier --local --config wrangler.migrations.json --persist-to .wrangler",
    "db:migrate:remote": "wrangler d1 migrations apply rentifier --remote --config wrangler.migrations.json",
    "db:query:local": "wrangler d1 execute rentifier --local --config wrangler.migrations.json --persist-to .wrangler --command",
    "db:reset:local": "rm -rf .wrangler && echo 'Local DB reset. Run pnpm db:migrate:local to recreate.'",
    "deploy:collector": "pnpm --filter @rentifier/collector exec wrangler deploy",
    "deploy:processor": "pnpm --filter @rentifier/processor exec wrangler deploy",
    "deploy:notify": "pnpm --filter @rentifier/notify exec wrangler deploy",
    "deploy:all": "pnpm deploy:collector && pnpm deploy:processor && pnpm deploy:notify",
    "webhook:setup": "tsx scripts/setup-webhook.ts",
    "test:yad2": "tsx scripts/test-yad2-api.ts"
  },
  "packageManager": "pnpm@10.6.2",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=10.0.0"
  },
  "dependencies": {
    "@rentifier/connectors": "workspace:*",
    "@rentifier/db": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "concurrently": "^9.2.1",
    "dotenv": "^17.3.1",
    "eslint": "^8.57.0",
    "prettier": "^3.2.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18",
    "wrangler": "^4.67.0"
  }
}
